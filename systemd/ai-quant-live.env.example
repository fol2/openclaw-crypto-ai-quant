# OpenClaw AI Quant - Live Trader Environment
#
# Used by: openclaw-ai-quant-live.service
# Copy to ~/.config/openclaw/ai-quant-live.env

# ── Mode ──────────────────────────────────────────────────────────
# Safer default: connect + analyze but never send orders.
AI_QUANT_MODE=dry_live

# ── Secrets / Wallet ──────────────────────────────────────────────
# Recommended: keep secrets OUTSIDE the repo and lock permissions (chmod 600).
AI_QUANT_SECRETS_PATH=~/.config/openclaw/ai-quant-secrets.json

# ── Databases ─────────────────────────────────────────────────────
AI_QUANT_DB_PATH=./trading_engine_live.db

# ── Universe ──────────────────────────────────────────────────────
AI_QUANT_TOP_N=50

# ── Candle interval / lookback ────────────────────────────────────
AI_QUANT_INTERVAL=1h
AI_QUANT_LOOKBACK_BARS=200

# ── Debugging ─────────────────────────────────────────────────────
AI_QUANT_NEUTRAL_AUDIT_SAMPLE_EVERY_S=600
AI_QUANT_NEUTRAL_AUDIT_SAMPLE_SYMBOLS=5
AI_QUANT_DEBUG_GATES_SYMBOLS=BTC
AI_QUANT_DEBUG_GATES_EVERY_S=30
AI_QUANT_ENTRY_MAX_DELAY_S=0
AI_QUANT_ENTRY_RETRY_ON_CAPACITY=0

# ── Live Safety Gates ─────────────────────────────────────────────
# Both MUST be set for live mode to send real orders.
# AI_QUANT_LIVE_ENABLE=1
# AI_QUANT_LIVE_CONFIRM=I_UNDERSTAND_THIS_CAN_LOSE_MONEY

# Kill switches (set to 1 to disable).
AI_QUANT_KILL_SWITCH=0
AI_QUANT_HARD_KILL_SWITCH=0

# ── Notifications ─────────────────────────────────────────────────
AI_QUANT_NOTIFY_DISCORD_LIVE=1
AI_QUANT_DISCORD_CHANNEL_LIVE=YOUR_DISCORD_CHANNEL_ID

# ── Live Sizing ───────────────────────────────────────────────────
AI_QUANT_LIVE_MAX_OPEN_POSITIONS=10
AI_QUANT_LIVE_MAX_NOTIONAL_USD_PER_ORDER=150.0
AI_QUANT_LIVE_MIN_MARGIN_USD=8.0

# ── WS Health ─────────────────────────────────────────────────────
AI_QUANT_WS_STALE_MIDS_S=60
AI_QUANT_WS_ENABLE_BBO=0
AI_QUANT_WS_STALE_BBO_S=0
AI_QUANT_WS_STALE_CANDLES_S=7200

# ── REST Sync ─────────────────────────────────────────────────────
AI_QUANT_LIVE_STATE_SYNC_SECS=10
HL_LIVE_USER_STATE_TTL_S=3
AI_QUANT_HL_TIMEOUT_S=4

# ── Order Execution ──────────────────────────────────────────────
HL_LIVE_MARKET_SLIPPAGE_PCT=0.01
